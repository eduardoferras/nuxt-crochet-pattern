{
	"name": "backend",
	"version": "1.1.0",
	"private": true,
	"main": "server.js",
	"type": "module",
	"scripts": {
		"test": "vitest",
		"test:watch": "vitest --watch",
		"coverage": "vitest run --coverage",
		"build": "tsup",
		"start:dev": "node --env-file=.env dist/server.js",
		"start": "node dist/server.js",
		"dev": "tsx watch --env-file=.env src/server.ts",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"db:generate": "drizzle-kit generate --config src/config/drizzle-kit.config.ts",
		"db:migrate": "drizzle-kit migrate --config src/config/drizzle-kit.config.ts",
		"db:push": "drizzle-kit push --config src/config/drizzle-kit.config.ts"
	},
	"dependencies": {
		"better-auth": "1.4.13",
		"bullmq": "5.66.5",
		"cors": "2.8.5",
		"drizzle-orm": "0.45.1",
		"express": "5.2.1",
		"ioredis": "5.8.2",
		"node-cron": "4.2.1",
		"pg": "8.17.1",
		"resend": "6.5.2",
		"tsup": "8.5.1",
		"zod": "4.3.5"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.11",
		"@types/cors": "2.8.19",
		"@types/express": "5.0.6",
		"@types/pg": "8.16.0",
		"@vitest/coverage-v8": "4.0.17",
		"drizzle-kit": "0.31.8",
		"tsx": "4.21.0",
		"typescript": "5.9.3",
		"vite-tsconfig-paths": "5.1.4",
		"vitest": "4.0.17"
	}
}
